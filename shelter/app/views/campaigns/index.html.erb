<%= render "/shared/navbar" %>
<div class="container">
	<div class="row-fluid">
		<div class="col-md-12">
			<h2>Make a difference in someone's life today.</h2>
		</div>
	</div>
	<div class="row-fluid">
	<div class="col-md-6">
      	<div class="rendered-data">
      		<h3>Today's Campaign</h3>
	      	<h4><span class="label label-default">Date:</span>   <%=@campaign[0].night_date.strftime("%m/%d/%Y")%></h4>
			<h4><span class="label label-default">Clients:</span>   <%=@campaign[0].clients.length %> </h4>	
			<h4><span class="label label-default">Rooms needed:</span>   <%=@campaign[0].clients.length %></h4>
			<h4><span class="label label-default">Amount needed:</span>   $<%=@campaign[0].clients.length*25 %></h4>
    	</div>
    	
	</div>
	</div>
	<div class="col-md-6">
	<h3>Funding Still Needed</h3>
	<div class="progress">
  <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuemin="0" aria-valuemax="100" style="width:10%">
  <button onclick="window.location.href='/donations/new'" type="button" class="btn btn-primary btn-lg">Donate Now</button>
  	</div>
	</div>
</div>

