<div class="container" id="campaign">
  <h3><small>Today's Campaign</small></h3>
  <h3>Make a tangible difference in someone's life today.</h3>
	<div class="row">
		  <div class="col-md-6">
			<h5><b>Date:</b><%=@campaign.night_date.strftime("%m/%d/%Y")%></h5>
        <h5><b>Clients: </b><%=@campaign.clients.length %> </h5>
        <h5><b>Rooms needed: </b><%= @campaign.rooms_still_needed %></h5>
        <h5><b>Amount needed: </b>$<%=@campaign.amount_still_needed %></h5>
      
    <% if @campaign.amount_still_needed > 0 %>
          <br>
          <h5>Funding Still Needed</h5>
          <div class="progress">
              <div class="progress-bar progress-bar-striped active" role="progressbar"
            aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:<%= @campaign.percentage_raised %>%">
              </div>
          </div>
          <div id="donate-button">
           <%= render "/shared/donate_button.html.erb" %>
          </div>
		</div>
    </div>
  	<% else %>
  		    <h2>Funding Complete!</h2>
			     <div class="progress">
  				    <div class="progress-bar progress-bar-striped active" role="progressbar"
  					aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:<%= @campaign.percentage_raised %>%">
  				    </div>
			     </div>
            <div id="donate-button">
            <button onclick="window.location.href='/clients'" type="button"  class="btn btn-primary btn-lg">Come back tomorrow</button>
            </div>
    <% end %>
</div>
