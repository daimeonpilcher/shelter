<div class="container" id="edit_profile">
  <h3><small>Edit Your Profile</small></h3>
  <h3>Change it up. We don't mind.</h3>
  <div class="col-md-8">
		<h5><small>Select a field to update your information.</small></h5>
    <br>
	<%= form_for @user, html: {class: "form-horizontal form-top"}  do |f| %>
  		<div class="form-group">
    		  <label for="inputFirstName3" class="col-sm-2 control-label">First Name</label>
		      <div class="col-sm-10">
    		<%= f.text_field :first_name, placeholder: "First Name", class: "form-control" %>
        </div>
  	 </div>
  	
    <div class="form-group">
    	 <label for="inputLastName3" class="col-sm-2 control-label">Last Name</label>
        
      <div class="col-sm-10">			  
    	<%= f.text_field :last_name, placeholder: "Last Name", class: "form-control" %>
    </div>
  </div>

  	<div class="form-group">
    	<label for="inputCurrentCity3" class="col-sm-2 control-label">City</label>
    <div class="col-sm-10">			  
    	<%= f.text_field :city, placeholder: "Current city", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
  		<%= f.submit "Update", class: "btn btn-default" %>
    </div>
  </div>
	<% end %>
  </div>    
</div>
