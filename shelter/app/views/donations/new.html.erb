<div class="container" id="content">
<div id="full-page">
<% if Donation.where("created_at >= ?", Time.zone.now.beginning_of_day).count < Client.count %>

<%= form_tag donations_path do %>
  <article>
    <label class="amount">
      <% people_needed_help = Client.count - Donation.where("created_at >= ?", Time.zone.now.beginning_of_day).count %>
    <div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-8"><span id="donation-headline">We still need to get <large><%= pluralize( people_needed_help, 'person' ) %></large>  off the street and into a hotel room tonight!</span></div>
      <div class="col-md-2"></div>
    </div>
    <div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8"><div id="tag-line">Help make this possible by donating $25 for a room now.</div></div>
  <div class="col-md-2"></div>
</div>   
  </label>
</article>

<div id="button-stripe">
  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="One Hotel Room"
          data-amount="2500">
  </script>
 </div>
<% end %>
<% else %>
<div id="middle-page">
<div class="row">
  <div class="col-md-8" id="completed"><h3 id="donation-headline">Thank you for visting our site!</h3><p id="donation-body">We completed our donations for today. Please come back tomorrow to help out.</p></div>
</div>

<% end %>
</div>
</div>

